{
    "name": "kensa-minecraft-launcher",
    "description": "A Minecraft launcher with auto-update feature to facilitate playing modded minecraft",
    "author": "Kensa",
    "private": true,
    "version": "3.12.2",
    "license": "MIT",
    "main": "dist-electron/electron.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kensaa/kensa-minecraft-launcher.git"
    },
    "scripts": {
        "dev": "vite",
        "build": "rm -r -f release && yarn && tsc && vite build && electron-builder --x64 -wl && rm -r dist-electron && rm -r dist",
        "release": "tsc && vite build && electron-builder --x64 -wl --publish always"
    },
    "dependencies": {
        "bootstrap": "^5.3.0",
        "decompress": "^4.2.1",
        "electron-fetch": "^1.9.1",
        "lucide-react": "^0.104.1",
        "minecraft-launcher-core": "^3.18.1",
        "msmc": "patch:msmc@npm%3A5.0.5#~/.yarn/patches/msmc-npm-5.0.5-d83892c101.patch",
        "pino": "^9.7.0",
        "pino-pretty": "^13.0.0",
        "react": "^18.2.0",
        "react-bootstrap": "^2.6.0",
        "react-dom": "^18.2.0",
        "sass": "^1.56.1",
        "semver": "^7.7.2",
        "source-map-support": "^0.5.21",
        "zustand": "^4.1.4"
    },
    "devDependencies": {
        "@types/decompress": "^4.2.7",
        "@types/node": "^18.11.9",
        "@types/react": "^18.0.24",
        "@types/react-dom": "^18.0.8",
        "@types/semver": "^7",
        "@vitejs/plugin-react": "^2.2.0",
        "electron": "^21.3.0",
        "electron-builder": "^23.6.0",
        "tsx": "^3.12.8",
        "typescript": "^4.6.4",
        "vite": "^3.2.3",
        "vite-electron-plugin": "^0.5.2",
        "vite-plugin-electron-renderer": "^0.11.3"
    },
    "build": {
        "appId": "fr.kensa.minecraftLauncher",
        "productName": "Kensa Minecraft Launcher",
        "directories": {
            "output": "release",
            "buildResources": "buildAssets"
        },
        "files": [
            "dist-electron/**/*",
            "dist/**/*"
        ],
        "mac": {
            "target": "dmg"
        },
        "linux": {
            "target": {
                "target": "zip",
                "arch": "x64"
            },
            "category": "Game"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": "x64"
                },
                {
                    "target": "portable",
                    "arch": "x64"
                }
            ],
            "publisherName": "Kensa"
        },
        "publish": {
            "provider": "github",
            "releaseType": "draft"
        }
    },
    "packageManager": "yarn@4.4.1"
}
